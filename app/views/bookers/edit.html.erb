<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<div class="container">
  	<div class="low">
  		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@booker) do |f| %>
				<div class="edit-title">
					<h4>Title</h4>
					<%= f.text_field :title, class:"book_title" %>
				</div>
				<div class="edit-body">
					<h4>body</h4>
					<%= f.text_area :body, class:"book_body" %>
				</div>
				<div>
					<%= f.submit 'Update Book' %>
				</div>
			<% end %>
				<div class="edit-box-bottom">
					<span class="edit-show"><%= link_to "show", booker_path(@booker.id), class: "show_#{@booker.id}" %>
					</span>
					<span class="edit-back"><%= link_to "Back", bookers_path, class: "back" %>
					</span>
				</div>
		</div>
	</div>
</div>