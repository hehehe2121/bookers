<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<h1>Editing Book</h1>
<%= form_for(@booker) do |f| %>
	<div class="edit-title">
		<h4>Title</h4>
		<%= f.text_field :title %>
	</div>
	<div class="edit-body">
		<h4>body</h4>
		<%= f.text_area :body %>
	</div>
	<div>
		<%= f.submit 'Update Book' %>
	</div>
<% end %>
	<div class="edit-box-bottom">
		<span class="edit-show"><%= link_to "show", booker_path(@booker.id) %>
		</span>
		<span class="edit-back"><%= link_to "Back", bookers_index_path %>
		</span>
	</div>
