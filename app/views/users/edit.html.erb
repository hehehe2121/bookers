<div class="container">
  <div class="low">
    <div class="col-xs-3">
      <h1>User info</h1>
        <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@user.errors.count, "errors") %> prohibited this book from being saved:</h2>
              <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
              </ul>
          </div>
    <% end %>
          <div class="user-edit-name">
            <h4>name</h4>
            <%= f.text_field :name %>
          </div>
          <div class="user-edit-image">
            <h4>image</h4>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %>

          <%= f.attachment_field :profile_image %>
          </div>
          <div class="user-edit-body">
            <h4>Introduction</h4>
            <%= f.text_area :user_body %>
          </div>
        <div>
          <%= f.submit 'Update Book' %>
        </div>
        <% end %>
    </div>
  </div>
</div>
