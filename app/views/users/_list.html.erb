<div class="profile-box">
	<h2>User info</h2>
		<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %>
		<table class="user-table">
			<tr>
				<th>name</th>
				<th class="profile-name"><%= user.name %></th>
			</tr>
			<tr>
				<th>introcuction</th>
				<th class="profile-Introduction"><%= user.user_body %></th>
			</tr>
		</table>
		<% if user.id == current_user.id %>
			<%= link_to edit_user_path(user), class: "btn btn-default btn-block" do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			  <% end %>
		<% end %>
</div>